        <script><![CDATA[ (function executeRule(current, previous /*null when async*/ ) {
     // Search for all active HR Tasks associated with the HR ticket
     var hrTask = new GlideRecord('x_1022286_hr_hr_task');
     hrTask.addQuery('parent', current.sys_id);
     hrTask.addQuery('active', true);
     hrTask.query();

     // If there are active tasks, show an error message and abort the action
     if (hrTask.hasNext()) {
         gs.addErrorMessage("Please close all active tasks before Resolving this ticket");
         current.setAbortAction(true);
         return;
     } else {
         // If there are no active tasks, set Resolved by and Resolved fields
         current.resolved_by = gs.getUserID(); // Set to the current logged-in user
         current.resolved =new GlideDateTime().getDisplayValue(); // Set to the current date/time
     }
 })(current, previous);
]]></script>
